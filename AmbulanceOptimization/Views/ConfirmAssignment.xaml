        Title="Confirm Assignment" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Bekræft valget af ambulance" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <TextBlock Text="Ambulance-ID:" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,70,0,0"/>
        <TextBlock x:Name="VehicleIdTextBlock" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,70,0,0"/>

        <TextBlock Text="Ambulance Type:" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,100,0,0"/>
        <TextBlock x:Name="VehicleTypeTextBlock" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,100,0,0"/>
        
        
        
        
    </Grid>
